---
layout: layout.njk
title: Books
---

<nav class="sub-navigation header-sub-navigation flush-with-header content-spacer d-flex justify-content-center
    align-items-end text-uppercase">
  <a href="{{ '/books' | url }}" class="current">All Books</a>
  <a href="{{ '/books/books-for-caregivers' | url }}">Books For Caregivers</a>
</nav>
<div class="container">

  {% set booksArr = [] %}
  {% for k, book in books %}
    {% set booksArr = (booksArr.push(book), booksArr) %}
  {% endfor %}

  <div id="books-grid" class="row row-gap-4 justify-content-center">
    {% for book in booksArr | sort(false, false, "publishDate") | reverse %}
      <a class="col-6 col-md-4 col-lg-3 d-flex align-items-center" href="{{ '/books/' | url }}{{ book.title | slugify | url }}">
        <img src="{{ book.coverImageUrl | url }}" class="img-fluid" alt="{{ book.title }}"/>
        <div class="book-bg-container">
          <div class="book-bg" style="background-image:url('{{ book.coverImageUrl | url }}');"></div>
        </div>
      </a>
    {% endfor %}
  </div>
  {% include "quote.njk" %}
</div>
